<!DOCTYPE html>
<html>
  <head>
    <title>sample</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="container">
      <header class="header clearfix">
        <h2>sample</h2>
        <nav>
          <ul class="top-menu">
            <li><a style="color: #fff;">ヘルプ</a></li>
            <li class="dropdown">
              <a style="cursor: pointer; color: #fff;">アカウント</a>
              <ul class="items dropdown-menu">
                <% if logged_in? %>
                  <li><%= link_to "プロフィール", user_path(current_user.id) %></li>
                  <li><%= link_to "編集", edit_user_path(current_user.id) %></li>
                  <li><%= link_to "ログアウト", session_path(current_user.id), method: :delete %></li>
                <% else %>
                  <li><%= link_to "ログイン",new_session_path %></li>
                  <li><%= link_to "新規登録 ", new_user_path %></li>
                <% end %>
              </ul>
            </li>
            <li><%= link_to "ユーザー", users_path, style:"color: #fff;" %></li>
            <li><%= link_to "ホーム", posts_path, style:"color: #fff;" %></li>
          </ul>
        </nav>
      </header>
      <div class="wrapper">
          <%= yield %>
      </div>
      <footer></footer>
    </div>
  </body>
</html>
