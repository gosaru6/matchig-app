<h3>プロフィール</h3>
<div class="user_profile">
  <%= form_with(model: @user, local: true) do |form| %>
  <div class="user_box1 clearfix">
    <div class="user_image">
      <% if @user.image.present? %>
        <div><%= image_tag @user.image_url, :size => '80x80' %></div>
      <% else %>
        <div><%= image_tag 'default.png', :size => '80x80' %></div>
      <% end %>
    </div>
    <div class="user_name">
      <%= "名前： #{@user.name}"%>
    </div>
  </div>
  <div class="user_box2">
    <ul>
      <li class="user_p">性別:
        <% if @user.gender == 0 %>
          <%= "男性 "%>
          <% elsif @user.gender == 1%>
            <%= "女性" %>
          <% else %>
            <%= "その他" %>
          <% end %>
        </li>
        <li>年齢:
          <%= @user.age %></li>
        <% if current_user.id == @user.id %>
          <li><%= link_to "メッセージ一覧", conversations_path %></li>
        <% end %>
      </ul>
      <div class="experience_area">
        <% if @user.experience.present? %>
          <p style="font-size: 20px">手話経験</p>
          <%= @user.experience %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="btn_area">
    <p><%= link_to "編集", edit_user_path(@user.id), class: 'btn btn-default' %></p>
    <p><%= link_to "退会", user_path, method: :delete, data: { confirm: '退会処理を行っていいですか?'}, class: 'btn btn-danger' %></p>
  </div>
<% end %>
