<div class="container">
  <div class="row">
    <h3>プロフィール</h3>
    <div class="user-self-area col-xs-5 col-sm-4">
      <% if logged_in? && current_user.id != @user.id  %>
        <h4 class="send_message" style="color: #F76B8A;">
          <%= link_to "#{@user.name}さんへ", conversations_path(sender_id: current_user.id, recipient_id: @user.id), method: :post, style:"color: #F76B8A;" %><br>メッセージを送る
        </h4>
      <% end %>
      <div class="user-box1 clearfix">
        <div class="image-area">
          <% if @user.image.present? %>
            <%= image_tag @user.image_url, :size => '70x70' %>
          <% else %>
            <%= image_tag '/default.png', :size => '70x70' %>
          <% end %>
        </div>
        <div class="users-user-info">
          <p>名前: <%= @user.name %></p>
          <p>年齢: <%= @user.age %></p>
          <p>性別:
            <% if @user.gender == 0 %>
              <%= "男性 "%>
            <% elsif @user.gender == 1%>
              <%= "女性" %>
            <% else %>
              <%= "その他" %>
            <% end %>
          </p>
          <p>ユーザー属性:
            <% if @user.sort == 1 %>
              <%= "一般ユーザー" %>
            <% else %>
              <%= "通訳者" %>　<%= image_tag '/syuwa.png', :size => '35x35' %>
            <% end %>
          </p>
            <% if current_user.id == @user.id %>
              <p><%= link_to "メッセージ一覧へ", conversations_path %></p>
            <% end %>
          </div>
        </div>
        <div class="experience-area">
          <% if @user.experience.present? %>
            <p style="font-size: 20px">手話経験</p>
            <p style="word-break:break-all; word-wrap:break-word; display: inline-block; ">
              <%= @user.experience %>
            </p>
          <% end %>
        </div>
        <div class="btn-area">
          <% if current_user.id == @user.id %>
            <p>
              <%= link_to "編集", edit_user_path(@user.id), class: 'btn btn-default' %>
              <%= link_to "退会", user_path, method: :delete, data: { confirm: '退会処理を行っていいですか?'}, class: 'btn btn-danger' %>
            </p>
          <% end %>
        </div>
      </div>
      <!-- ここまでプロフィールエリア -->

      <div class="content-area col-xs-7 col-sm-offset-1 col-sm-6">
        <h3>投稿履歴</h3>
        <p class="page-entries-info clearfix"><%= page_entries_info @user_posted %></p>
        <% @user_posted.each do |post| %>
          <div class="post-content">
            <p>タイトル:<%= link_to cut_off("#{post.title}", 20), post_path(post.id) %></p>
            <p>内容:<%= post.content %></p>
            <p>希望日:<%= simple_time post.requested_date %></p>
            <p>投稿日:<%= simple_time post.created_at %></p>
            <% if post.user == current_user %>
              <p>
                <%= link_to '編集', edit_post_path(post.id), class: 'btn btn-default' %>
                |
                <%= link_to '削除', post, method: :delete, data: { confirm: '削除していいですか?'}, class: 'btn btn-danger' %>
              </p>
            <% end %>
          </div>
        <% end %>
      </div>
      <%= paginate @user_posted %>
    </div>
  </div>
