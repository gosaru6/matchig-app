<h1>通訳一覧(interpreter.html.erb)</h1>
<%= page_entries_info @interpreters %>
<% @interpreters.order(name: :asc).each do |interpreter| %>
  <div class="interpreter_area">
    <div class="user_image">
      <% if interpreter.image.present? %>
        <div><%= image_tag interpreter.image_url, :size => '60x60' %></div>
      <% else %>
        <div><%= image_tag 'default.png', :size => '60x60' %></div>
      <% end %>
    </div>
    <div class="user_name"><%= link_to "ユーザー名: #{interpreter.name}", user_path(interpreter.id, style="color: #000000;") %></div>
  </div>
<% end %>
<%= paginate @interpreters %>
